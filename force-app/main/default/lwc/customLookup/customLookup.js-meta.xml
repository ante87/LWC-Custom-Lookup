<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>46.0</apiVersion>
    <description>Custom Lookup</description>
    <isExposed>true</isExposed>
    <masterLabel>Custom Lookup</masterLabel>
    <targets>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <property name="lookupLabel" label="Lookup Label" type="String" required="true"/>
            <property name="objectName" label="Object Api Name" type="String" required="true"/>
            <property name="displayFieldName" label="Field To Display" type="String" required="true"/>
            <property name="numOfChars" label="Minimum nuber of chars" type="Integer"/>
            <property name="iconName" label="Icon Name" type="String"/>
            <property name="extraFields" label="Extra Fields (separate by ',')" type="String"/>
            <property name="extraFilters" label="Extra Filters For SOQL" type="String"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
